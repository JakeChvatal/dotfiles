"poweroff"
  Mod4 + Escape
"reboot"
  Mod4 + Shift + Escape
"pavucontrol"
  Mod4 + a
"/usr/bin/spotify --force-device-scale-factor=2"
  Mod4 + Tab
"thunar"
  Mod4 + BackSpace
"chromium"
  Mod4 + backslash
"lock"
  Mod4 + grave
"xkill"
  End
"emacs"
  Mod4 + Shift 


# NAVIGATION
# hjkl as arrow keys everywhere
"xdotool keydown Down"
  Caps_Lock+J
"xdotool keydown Up"
  Caps_Lock+K
"xdotool keydown Right"
  Caps_Lock+L
"xdotool keydown Left"
  Caps_Lock+H


# VOLUME KEYS
"amixer -D pulse sset Master 10%+"
  XF86AudioRaiseVolume
"amixer -D pulse sset Master 10%-"
  XF86AudioLowerVolume
"amixer -D pulse sset Master Playback Switch toggle"
  XF86AudioMute

# BRIGHTNESS KEYS
"light -A 10"
  XF86MonBrightnessUp
"light -U 10"
  XF86MonBrightnessDown
"light -A 5"
  Shift+XF86MonBrightnessUp
"light -U 5"
  Shift+XF86MonBrightnessDown
"light -A 1"
  Mod4+Shift+XF86MonBrightnessUp
"light -U 1"
  Mod4+Shift+XF86MonBrightnessDown

# MUSIC
"playerctl play-pause"
  XF86AudioPlay
"playerctl play-pause"
  Mod4 + Shift + slash

"playerctl previous"
  XF86AudioPrev
"playerctl previous"
  Mod4 + Shift + comma

"playerctl next"
  XF86AudioNext

